{
  "name": "koa-kit-general",
  "version": "1.0.0",
  "description": "A koa starter kit",
  "main": "index.js",
  "engines": {
    "node": "14.17.0"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon dev.js",
    "build": "babel --delete-dir-on-start --out-dir build --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored --extensions .js,.ts src",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts)\"",
    "format": "npm run prettier -- --write",
    "check-types": "tsc",
    "check-format": "npm run prettier -- --list-different",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "npm-run-all --parallel check-types check-format lint test build",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-pino-logger": "^3.0.0",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6",
    "pino": "^6.11.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^5.1.0",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
